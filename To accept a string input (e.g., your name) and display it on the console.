;4. Write a program to accept a string input (e.g., your name) and display it on the console.

section .bss
    input resb 100     
section .text
    global _start
_start:
    mov eax, 3          
    mov ebx, 0          
    mov ecx, input     
    mov edx, 100       
    int 0x80
    mov eax, 4         
    mov ebx, 1          
    mov ecx, input      
    mov edx, 100       
    int 0x80
    mov eax, 1
    mov ebx, 0
    int 0x80
