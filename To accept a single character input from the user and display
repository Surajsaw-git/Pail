;3. Write a program to accept a single character input from the user and display it back on the console.

section .bss
char resb 1

section .data
nl db 10

section .text
global _start
_start:
    ; read 1 byte (character)
    mov eax, 3
    mov ebx, 0
    mov ecx, char
    mov edx, 1
    int 0x80

    ; print the character
    mov eax, 4
    mov ebx, 1
    mov ecx, char
    mov edx, 1
    int 0x80

    ; print newline
    mov eax, 4
    mov ebx, 1
    mov ecx, nl
    mov edx, 1
    int 0x80

    mov eax, 1
    int 0x80
