;16. Write a program to accept three 8-bit numbers from the user, store them in an array, add them, and display the result.


section .bss
nums resb 3
sum  resb 1

section .data
nl db 10

section .text
global _start
_start:
    ; read 3 digits into nums
    mov eax,3
    mov ebx,0
    mov ecx,nums
    mov edx,3
    int 0x80

    ; add three numbers
    mov al,[nums]
    sub al,'0'
    mov bl,[nums+1]
    sub bl,'0'
    add al,bl
    mov bl,[nums+2]
    sub bl,'0'
    add al,bl

    ; convert to ascii
    add al,'0'
    mov [sum],al

    ; print result
    mov eax,4
    mov ebx,1
    mov ecx,sum
    mov edx,1
    int 0x80

    ; print newline
    mov eax,4
    mov ebx,1
    mov ecx,nl
    mov edx,1
    int 0x80

    mov eax,1
    int 0x80
