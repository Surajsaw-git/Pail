;16. Write a program to accept three 8-bit numbers from the user, store them in an array, add them, and display the result.


section .text
global _start

_start:
    mov eax, arr
    mov ebx, 0
    mov ecx, 3

top:
    add bl, byte [eax]
    add eax, 1
    loop top

done:
    add bl, '0'
    mov [sum], bl

display:
    mov edx, 2
    mov ecx, sum
    mov ebx, 1
    mov eax, 4
    int 0x80

    mov eax, 1
    int 0x80

section .data
arr: db 2, 3, 4      ; three numbers (example: 2+3+4=9)

sum: db 0, 0xa       ; result + newline
